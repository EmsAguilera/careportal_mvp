generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model CareType {
  id Int   @id @default(autoincrement())
  name String @unique
  facilities Facility[]
  patients   Patient[]
}

model Facility {
  id String   @id @default(uuid())
  name String @unique
  careType CareType @relation(fields: [careTypeId], references: [id])
  careTypeId Int
  servesCodeMin Int
  servesCodeMax Int
  zipCode Int
  capacity Boolean
  patients   Patient[]
}

model Patient {
  id  String   @id @default(uuid())
  name  String
  lastName String
  zipCode Int 
  careType CareType @relation(fields: [careTypeId], references: [id])
  careTypeId Int
  createdAt  DateTime @default(now())
  matchStatus Boolean
  facility   Facility? @relation(fields: [facilityId], references: [id])
  facilityId String?
}
